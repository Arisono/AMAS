<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include 
        android:id="@+id/lv_top"
        layout="@layout/inculde_header_one"/>
    <!--常用语列表  -->
    <ListView 
        android:id="@+id/lv_multiselect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lv_top"
        android:background="#EFEFEF"
        android:divider="#C4C4C4"
        android:dividerHeight="1dp"
        android:listSelector="#00000000"
        android:fadingEdge="none"
        android:padding="5dp"
        android:scrollbars="none">
    </ListView>
    
        <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/iconfont_quan"
        app:fab_shadowColor="#000000"
        app:fab_colorNormal="#FFFFFF"
        app:fab_colorPressed="#000000"
        app:fab_colorRipple="#FFFFFF"
        app:fab_elevationCompat="10dp"/>

</RelativeLayout>
