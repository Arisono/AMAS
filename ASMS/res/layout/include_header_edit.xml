<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/background_header_one" >
    <ImageButton 
        android:id="@+id/bt_template"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:background="@drawable/iconfont_moban"/>
    
    <EditText
        android:id="@+id/et_header_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/bt_person"
        android:layout_toRightOf="@+id/bt_template"
        android:background="@drawable/shape_from_edit"
        android:minHeight="40dp"
        android:minWidth="180dp" />
    
    <ImageButton 
        android:id="@+id/bt_person"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="10dp"
         android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" 
        android:background="@drawable/iconfont_lianxiren_copy"/>

</RelativeLayout>
