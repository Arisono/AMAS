<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <include layout="@layout/include_header_edit"/>
    
     <com.github.clans.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_above="@+id/iv_bottom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/iconfont_yulan"
        app:fab_shadowColor="#000000"
        app:fab_colorNormal="#FFFFFF"
        app:fab_colorPressed="#000000"
        app:fab_colorRipple="#FFFFFF"
        app:fab_elevationCompat="10dp"/>
    
    <include 
        android:id="@+id/iv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/include_bottom_sms"/>
</RelativeLayout>
