<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/inculde_header_one" />
    <!--常用语列表  -->
    <ListView 
        android:id="@+id/lv_template"
        android:layout_below="@+id/rl_header"
        android:layout_above="@+id/ll_bottom_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EFEFEF"
        android:divider="#C4C4C4"
        android:dividerHeight="1dp"
        android:listSelector="#00000000"
        android:fadingEdge="none"
        android:padding="5dp"
        android:scrollbars="none">
    </ListView>
    <!--底部布局  -->
    <LinearLayout 
        android:id="@+id/ll_bottom_add"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <ImageView 
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/selector_bt_add"
            android:contentDescription="@string/app_name"
            />
        <TextView
            android:id="@+id/tv_add_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="新建常用语 ">
        </TextView>
    </LinearLayout>

</RelativeLayout>
